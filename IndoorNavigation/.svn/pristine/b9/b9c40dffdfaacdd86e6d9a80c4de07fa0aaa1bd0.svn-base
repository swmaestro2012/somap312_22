<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/previewbg"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="92" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="557"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="15" />

        <FrameLayout
            android:id="@+id/activity_preview_framelayout"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="450"
            android:orientation="vertical" >

            <com.softwaremaestro.Indoornavigation.Util.DraggableImageView
                android:id="@+id/activity_preview_draggableimageview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffffff"
                android:focusable="true" />
 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="15dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/activity_preview_button_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:textSize="30sp"
                        android:textColor="#ffffff00"
                        android:background="@drawable/buttonstyle"/>

                    <Button
                        android:id="@+id/activity_preview_button_floor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   1F   "
                        android:textColor="#ffffffff"
                        android:textSize="30sp" 
                        android:background="@drawable/buttonstyle"/>

                    <Button
                        android:id="@+id/activity_preview_button_floor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   2F   "
                        android:textColor="#ffffffff" 
                        android:textSize="30sp"
                        android:background="@drawable/buttonstyle"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="15" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="27" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="65"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="85" />

        <Button
            android:id="@+id/activity_preview_button_ok"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="65"
            android:background="@null" />

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="180" />

        <Button
            android:id="@+id/activity_preview_button_cancle"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="65"
            android:background="@null" />

        <View
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="85" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="60" />

</LinearLayout>
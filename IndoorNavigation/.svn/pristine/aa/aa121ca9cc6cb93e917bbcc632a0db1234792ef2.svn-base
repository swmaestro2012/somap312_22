<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="400dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="10dip"
                android:layout_height="fill_parent" />

            <FrameLayout
                android:id="@+id/activity_preview_framelayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <com.softwaremaestro.Indoornavigation.Util.DraggableImageView
                    android:id="@+id/activity_preview_draggableimageview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffffff"
                    android:focusable="true" />

                <Button
                    android:id="@+id/activity_preview_button_select_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111" />
            </FrameLayout>

            <View
                android:layout_width="10dip"
                android:layout_height="fill_parent" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            <Button
                    android:id="@+id/activity_preview_button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111" />
            <Button
                    android:id="@+id/activity_preview_button_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222" />
            </LinearLayout>
    </LinearLayout>

</FrameLayout>